//This is 'global' function which give possibility get actual list of available fleamarket objects anywhere in the module.
//It can return 0-1-2 indexed array, or associative array where keys is fleamarkets IDs (like olx, bsp, skl).
//When creating new fleamarket - just add it's class to sherlock_fleamarket_classes.inc, make new array element in THIS function, and edit .css (add one more tab).
function get_available_fleamarkets($assoc = FALSE) {
  $fleamarket_objects = [];

  $fleamarket_objects[0] = new OlxMarket();
  $fleamarket_objects[1] = new BesplatkaMarket();
  $fleamarket_objects[2] = new SkylotsMarket();

  if ($assoc) {
    $fleamarket_objects_assoc = [];
    foreach ($fleamarket_objects as $object) {
      $fleamarket_objects_assoc[$object::getMarketId()] = $object;
    }
    unset($object);

    $fleamarket_objects = $fleamarket_objects_assoc;
  }
  return $fleamarket_objects;
}
