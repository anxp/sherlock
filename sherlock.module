function SherlockClassLoader($className) {
  if (endsWith($className, 'ItemSniper')) {
    $path = drupal_get_path('module', 'sherlock').DIRECTORY_SEPARATOR.'Classes'.DIRECTORY_SEPARATOR;
    require_once $path.$className.'.class.inc';
  }
}

